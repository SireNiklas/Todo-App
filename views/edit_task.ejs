<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="https://kit.fontawesome.com/a96a640bf2.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>QUESTER &bull; EDIT QUEST</title>
  </head>
<body>
    <!-- <div class="container d-flex justify-content-center"> -->
    <!-- As a heading -->
    <nav class="navbar sticky-top">
      <div class="container-fluid justify-content-center">
        <span class="navbar-brand h1">QUESTER &bull; EDIT QUEST</span>
        <form class="form-inline mr-5" action="/", method="get"><button type="submit" class="btn btn-warning">GO BACK</button></form>
        <!-- <i class="fa-solid fa-coins form-inline">&nbsp;&nbsp;&nbsp;0</i> -->
      </div>
    </nav>
    </br>
    <% data.forEach(entry => { %>
    <div class="container d-flex justify-content-center">
      <div class="d-grid gap-2 d-md-block mb-3">
        <div class="card text-white" style="width: 25rem;">
          <div class="card-body">
            <h4 class="card-title">EDIT QUEST &bull; <%= entry.title %></h4>
            <form action="/api/edit_task/<%= entry.id %>" method="post">
              <div class="form-group">
                <label for="tTitle">Title</label>
                <input class="form-control" type="text" id="tTitle" name="title" placeholder="Clean Room" value="<%= entry.title %>">
              </div>
              <div class="form-group">
                <label for="tSummary">Summary</label>
                <input class="form-control" type="text" id="tSummary" name="summary" placeholder="Pick up all unessasary objects in bedroom." value="<%= entry.summary %>">
              </div>
              <label>Effort</label>
              <select class="form-control" id="tEffort" name="effort" value="<%= entry.effort %>" >
                <% if(entry.effort == "low") { %>
                  <option value="low" selected>Low</option>
                  <option value="medium">Medium<Low/option>
                  <option value="high">High</option>
                <% } %>
                <% if(entry.effort == "medium") { %>
                  <option value="low">Low</option>
                  <option value="medium" selected>Medium</option>
                  <option value="high">High</option>
                <% } %>
                <% if(entry.effort == "high") { %>
                  <option value="low">Low</option>
                  <option value="medium">Medium<Low/option>
                  <option value="high" selected>High</option>
                <% } %>
              </select>  
              <br/>
              <button type="submit" class="btn btn-success mr-1">Save &bull; <%= entry.title %></button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }) %>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>  </body>
</body>
</html>
