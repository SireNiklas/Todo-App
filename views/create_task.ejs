<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="https://kit.fontawesome.com/a96a640bf2.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>QUESTER &bull; CREATE QUEST</title>
  </head>
<body>
    <!-- <div class="container d-flex justify-content-center"> -->
    <!-- As a heading -->
    <nav class="navbar sticky-top">
      <div class="container-fluid justify-content-center">
        <span class="navbar-brand h1">QUESTER &bull; NEW QUEST</span>
        <form class="form-inline mr-5" action="/", method="get"><button type="submit" class="btn btn-warning">GO BACK</button></form>
        <!-- <i class="fa-solid fa-coins form-inline">&nbsp;&nbsp;&nbsp;0</i> -->
      </div>
    </nav>
    </br>
    <div class="container d-flex justify-content-center">
      <div class="d-grid gap-2 d-md-block mb-3">
        <div class="card text-white" style="width: 25rem;">
          <div class="card-body">
            <h4 class="card-title">NEW QUEST</h4>
            <form action="/api/add_task" method="post">
              <div class="form-group">
                <label for="tTitle">Title</label>
                <input type="text" class="form-control" id="tTitle" name="title" placeholder="Clean Room">
              </div>
              <div class="form-group">
                <label for="tSummary">Summary</label>
                <input type="text" class="form-control" id="tSummary" name="summary" placeholder="Clean up all nonsense in bedroom.">
              </div>
              <label>Effort</label>
              <select class="form-control" id="tEffort" name="effort">
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
              </select>
              <br/>
              <button type="submit" class="btn btn-success">Create</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>  </body>
  </body>
</html>
